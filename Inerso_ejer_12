import java.util.Scanner;

public class Inverso_ejer_12 {
    public static void main(String[] args) {
        try (Scanner scanner = new Scanner(System.in) // Creamos un objeto Scanner para leer la entrada del usuario
        ) {
            int[] numeros = new int[10]; // Creamos un arreglo de enteros para almacenar los números ingresados
            System.out.println("Ingresa 10 números:");
            // Solicitamos al usuario que ingrese los 10 números
            for (int i = 0; i < numeros.length; i++) {
                System.out.print("Número " + (i + 1) + ": ");
                numeros[i] = scanner.nextInt();
            }   System.out.println("Los números ingresados en orden inverso son:");
            // Mostramos los números ingresados en orden inverso
            for (int i = numeros.length - 1; i >= 0; i--) {
                System.out.println(numeros[i]);
            }
            // Cerramos el objeto Scanner
        } // Creamos un arreglo de enteros para almacenar los números ingresados
    }
}
